{
  "display": "@rageatm/tsconfig/next",
  "extends": "./common.json",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": { "@/*": ["./src/*"] },
    "types": [],
    "noEmit": true,
    "allowJs": true,
    "plugins": [{ "name": "next" }],
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "es2022"]
  }
}
